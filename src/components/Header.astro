---
const { pathname } = Astro.url;
const currentPath = pathname.replace(/\/$/, "") || "/";

import { Image } from 'astro:assets';
import logoMatasHoritzontal from '../assets/logos/teixits-matas-horitzontal.png';
---

<header class="fixed bg-white/10 backdrop-blur-md rounded-b-[30px] w-full h-[80px] top-0 z-50 p-2 font-semibold">
  <nav class="h-full px-8">
    <ul class="flex flex-row items-center h-full justify-between">
      <li>
        <a href="/">
          <Image 
            src={logoMatasHoritzontal}
            alt="logo-matas"
            class="h-[50px] w-auto object-contain"
            loading="eager"
          />
        </a>
      </li>
      <li class="flex flex-row gap-12">
        <a href="/" class={currentPath === "/" ? "nav-link active" : "nav-link"}>
          Home
        </a>
        <a href="/products" class={currentPath === "/products" ? "nav-link active" : "nav-link"}>
          Products
        </a>
        <a href="/sobre-nosaltres" class={currentPath === "/sobre-nosaltres" ? "nav-link active" : "nav-link"}>
          Sobre Nosaltres
        </a>
        <a href="/contact" class={currentPath === "/contact" ? "nav-link active" : "nav-link"}>
          Contact
        </a>
      </li>
      <li class="flex flex-row gap-5 items-center">
        <div class="w-[200px] h-8 border-matas-rojo border-2 rounded-3xl pl-4 flex items-center text-matas-gris opacity-75 text-sm">
          Buscar Productes
        </div>
        <div class="w-12 bg-matas-rojo h-5 rounded-3xl p-0.5">
          <div class="bg-white rounded-full w-5 h-full"></div>
        </div>
      </li>
    </ul>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-matas-gris transition-colors opacity-75; 
    text-shadow: 0px 2px 10px rgba(0, 0, 0, 0.5); 
  }

  .nav-link:hover {
    @apply text-matas-gris-2;
  }

  .active {
    @apply text-gray-900 font-bold;
    text-shadow: 0px 2px 10px rgba(0, 0, 0, 0.4);
  }
</style>