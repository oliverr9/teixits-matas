---
import { Image } from 'astro:assets';
import logoMatasHoritzontal from '../assets/logos/teixits-matas-horitzontal.png';
---


<header class="fixed top-0 z-50 w-full h-20 p-10 bg-gradient-to-b from-white/30 to-white/0 to-[90%]">
  <ul class="flex flex-row items-center justify-between h-full w-full">
    <li class="h-auto w-auto overflow-hidden">
      <div class="flex flex-row items-center gap-5">
        <div class="flex items-center justify-center">
          <ion-icon class="text-black text-[40px] block" name="menu-outline"></ion-icon>
        </div>
        <a href="/" class="flex items-center">
          <Image
            src={logoMatasHoritzontal}
            alt="logo-matas"
            class="h-[60px] w-auto object-contain"
          />
        </a>
      </div>
    </li>
    <li>
      <div class="h-[25px] w-52 border-b-2 border-b-black text-black flex flex-col justify-end">
        <p>BUSCAR</p>
      </div>
    </li>
    <li class="flex align-bottom justify-end w-52">
      <div class="flex flex-row items-center gap-8">

        <div>
          <ion-icon class="text-black h-[30px] w-[30px] cart" name="cart-outline"></ion-icon>
        </div>
        <div>
          <ion-icon class="text-black h-[25px] w-[25px] account"  name="person-outline"></ion-icon>
        </div>
      </div>
    </li>
  </ul>
</header>

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

<style>
  .account {
    --ionicon-stroke-width: 40px;
  }
  .cart {
    --ionicon-stroke-width: 32px;
  }
</style>