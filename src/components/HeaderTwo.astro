---
import { Image } from 'astro:assets';
import logoMatasHoritzontal from '../assets/logos/teixits-matas-horitzontal.png';
---

<header class="fixed top-0 z-50 w-full h-20 px-10 bg-gradient-to-b from-white/30 to-white/0 to-[90%] transition-all duration-500 ease-in-out" id="main-header">
  <ul class="flex flex-row items-center justify-between h-full w-full">
    <li class="h-auto w-auto group/total">
      <div class="flex flex-row items-center gap-5 cursor-pointer">
        <div class="flex items-center justify-center">
          <ion-icon class="text-black text-[40px] block" name="menu-outline"></ion-icon>
        </div>
        <a href="/" class="flex items-center z-[70] transition-all duration-500 ease-in-out transform group-hover/total:-translate-x-16">
          <Image
            src={logoMatasHoritzontal}
            alt="logo-matas"
            class="h-[60px] w-auto object-contain transition-all duration-500"
            loading="eager"
          />
        </a>
      </div>
      <div class="fixed top-0 left-0 h-screen w-96 bg-white shadow-2xl transform -translate-x-full group-hover/total:translate-x-0 transition-transform duration-500 ease-in-out z-[60] p-10 pt-28">
        <div class="flex flex-col gap-8 text-black">
          <h2 class="font-bold text-2xl border-b-2 border-black pb-2 uppercase tracking-tighter cursor-default">Explorar</h2>
          <nav class="flex flex-col gap-6 text-lg font-medium">
            <a href="/novedades" class="hover:text-matas-rojo hover:translate-x-2 transition-transform duration-200">NOVEDADES</a>
            <a href="/textil" class="hover:text-matas-rojo hover:translate-x-2 transition-transform duration-20">TEXTIL HOGAR</a>
            <a href="/confeccion" class="hover:text-matas-rojo hover:translate-x-2 transition-transform duration-20">CONFECCIÓN</a>
            <a href="/nosotros" class="hover:text-matas-rojo hover:translate-x-2 transition-transform duration-20">SOBRE NOSOTROS</a>
          </nav>
        </div>
      </div>
      <div class="fixed inset-0 bg-black/20 backdrop-blur-sm invisible opacity-0 group-hover/total:visible group-hover/total:opacity-100 transition-all duration-500 z-[55] pointer-events-none"></div>
    </li>
    <li>
      <form class="relative h-[25px] w-52 border-b-2 border-b-black group/search cursor-pointer">
        <input 
          type="search" 
          placeholder="BUSCAR" 
          class="bg-transparent outline-none w-full text-xs tracking-widest font-bold placeholder:text-black uppercase "
        />
        <ion-icon name="search-outline" class="absolute right-0 bottom-1"></ion-icon>
      </form>
    </li>
    <li class="flex align-bottom justify-end w-52">
      <div class="flex flex-row items-center gap-8">
        <div>
          <ion-icon class="text-black h-[35px] w-[35px] cart hover:scale-[1.2] transition-transform duration-200 cursor-pointer" name="cart-outline"></ion-icon>
        </div>
        <div>
          <ion-icon class="text-black h-[30px] w-[30px] account hover:scale-[1.2] transition-transform duration-200 cursor-pointer" name="person-outline"></ion-icon>
        </div>
      </div>
    </li>
  </ul>
</header>

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script>
  const header = document.getElementById('main-header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      // Clases cuando hay scroll: fondo blanco con opacidad y blur
      header?.classList.add('bg-white/70', 'backdrop-blur-md', 'shadow-sm', 'h-16');
      header?.classList.remove('bg-transparent', 'h-20');
    } else {
      // Clases cuando estamos arriba del todo
      header?.classList.remove('bg-white/70', 'backdrop-blur-md', 'shadow-sm', 'h-16');
      header?.classList.add('bg-transparent', 'h-20');
    }
  });
</script>

<style>
  .account {
    --ionicon-stroke-width: 40px;
    filter: drop-shadow(0px 0px 10px rgba(255, 255, 255, 1));
  }
  .cart {
    --ionicon-stroke-width: 32px;
    filter: drop-shadow(0px 0px 10px rgba(255, 255, 255, 1));
  }
  /* Ajuste para el icono de menú dentro del group */
  ion-icon[name="menu-outline"] {
    --ionicon-stroke-width: 32px;
  }
</style>