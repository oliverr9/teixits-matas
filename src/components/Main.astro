---
import { Image } from 'astro:assets';
import logoMatasQualitat from '../assets/logos/teixits-matas-qualitat.png';
---

<main>
  <section class="w-full h-[100vh] bg-[url('../assets/hero2.jpg')] bg-cover bg-center bg-no-repeat bg-black/20 relative overflow-hidden">
    <div class="flex flex-col justify-end items-start h-full pl-20 pb-20">
      <h1 class="sr-only">Teixits Matas: Tienda de tejidos y confección en Figueres</h1>
      <Image 
        src={ logoMatasQualitat }
        class="object-contain w-auto h-[170px]"
        alt="logo-matas"
        loading="eager"
      />
    </div>
    <div class="absolute bottom-5 left-1/2 -translate-x-1/2">
      <a href="#proxima-seccion" class="group flex flex-col items-center cursor-pointer">
        <div class="animate-arrow-down">
          <svg 
            width="50" 
            height="50" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="1" 
            stroke-linecap="round" 
            stroke-linejoin="round"
            class="text-black drop-shadow-md" 
          >
            <path d="M7 10l5 5 5-5"></path>
          </svg>
        </div>
      </a>
    </div>
    
  </section>

  <section id="proxima-seccion" class="w-full h-[40vh]">
  </section>
</main>


<style>
  /* Esta animación hace que la flecha baje y desaparezca suavemente */
  .animate-arrow-down {
    animation: arrow-float 2s infinite;
  }

  @keyframes arrow-float {
    0% {
      transform: translateY(-10px);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(10px);
      opacity: 0;
    }
  }
</style>