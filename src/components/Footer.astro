---
import { Image } from 'astro:assets';
import logoMatasRodo from '../assets/logos/teixits-matas-rodo.png';
import { Icon } from 'astro-icon/components'
---
<footer class="w-full h-auto bg-gradient-to-t from-gray-300 via-gray-300 to-white to-[100%]">
  <section class="w-full h-auto py-12 ">
    <ul class="flex flex-row justify-around align-center">
      <li>
        <Image 
          src={ logoMatasRodo }
          class="object-contain w-auto h-[150px] "
          alt="logo-matas"
          loading="lazy"
        />
      </li>
      <li class="flex flex-col justify-center">
        <a href="" class="relative inline-block w-fit group">
          Themes
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Faqs
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Contact
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
      </li>
      <li class="flex flex-col justify-center">
        <a href="" class="relative inline-block w-fit group">
          Terms
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Theme
            <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
      </li>
      <li class="flex flex-col justify-center">
        <a href="" class="relative inline-block w-fit group">
          License
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Privacy Policy
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Support
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
      </li>
      <li class="flex flex-col justify-center">
        <a href="" class="relative inline-block w-fit group">
          About Us
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Contact
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
        <a href="" class="relative inline-block w-fit group">
          Afiliates
          <span class="absolute left-0 bottom-0 w-full h-[2px] bg-matas-rojo scale-x-0 transition-transform duration-500 group-hover:scale-x-100"></span>
        </a>
      </li>
    </ul>
  </section>
  <hr class="w-[90%] mx-auto border-matas-rojo">
  <section class="w-full h-auto flex align-center justify-center py-12">
    <div class="flex flex-col gap-6">
      <div class="flex flex-row justify-center gap-4">
        <a href="https://instagram.com/..." aria-label="Instagram" class=" border-black rounded-[100%] border-2 p-1">
          <Icon name="mdi:instagram" class="w-8 h-8 hover:text-matas-rojo transition-colors" />
        </a>
        <a href="https://facebook.com/" aria-label="Facebook" class="border-black border-2 rounded-[100%] p-1">
          <Icon name="mdi:facebook" class="w-8 h-8 hover:text-matas-rojo transition-colors" />
        </a>
        <a href="https://gmail.com/" aria-label="Gmail" class="border-black border-2 rounded-[100%] p-1">
          <Icon name="mdi:gmail" class="w-8 h-8 hover:text-matas-rojo transition-colors" />
        </a>
      </div>
      <div>
        <p>Â©2026 Teixits Matas. Todos los derechos reservados.</p>
      </div>
    </div>
  </section>
</footer>